{
  "name": "react-monorepo",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run --parallel start",
    "start:cra-ts": "npm run prepare && lerna run --parallel start --scope=@mono/ui --scope=@mono/cra-ts",
    "prepare": "rimraf ui/build && lerna run prepare",
    "build": "npm run prepare && lerna run --parallel build",
    "storybook": "lerna run storybook --scope=@mono/storybook",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "babel-loader": "^8.0.6",
    "lerna": "^3.16.4",
    "rimraf": "^2.6.3"
  },
  "dependencies": {},
  "workspaces": [
    "./cra-ts",
    "./ui",
    "./storybook",
    "./config"
  ]
}
